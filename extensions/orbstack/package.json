{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "orbstack",
  "title": "OrbStack",
  "description": "Manage OrbStack with Raycast",
  "icon": "orbstack.png",
  "author": "nicholasq",
  "platforms": [
    "macOS"
  ],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "machine_list",
      "title": "Machine List",
      "description": "List and manage machines",
      "mode": "view"
    },
    {
      "name": "machine_create",
      "title": "Machine Create",
      "description": "Create a new machine",
      "mode": "view"
    },
    {
      "name": "config_show",
      "title": "Config Show",
      "description": "Display OrbStack configuration",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "machine_list",
      "title": "Machine List",
      "description": "List all OrbStack Machines"
    },
    {
      "name": "machine_info",
      "title": "Machine Info",
      "description": "Info for an OrbStack Machine"
    },
    {
      "name": "machine_execute_command",
      "title": "Machine Run Command",
      "description": "Execute a shell command in an OrbStack Machine"
    },
    {
      "name": "machine_open",
      "title": "Machine Open Terminal",
      "description": "Open a terminal for an OrbStack Machine"
    },
    {
      "name": "machine_create",
      "title": "Machine Create",
      "description": "Create a new machine"
    }
  ],
  "ai": {
    "evals": [
      {
        "input": "@orbstack list my machines"
      },
      {
        "input": "@orbstack can you install fish shell in ubuntu?"
      }
    ]
  },
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
